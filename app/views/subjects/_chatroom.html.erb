<div class="row">
	<% @chatrooms.each do |chatroom| %>
		<div class="col-sm-6 col-md-4 col-lg-3">
			<div class="chatroom" id="<%= chatroom.subject %>">
				<div class="chatroom-title">
					<%= chatroom.title %>
				</div>
				<div class="chatroom-content">
					<%= chatroom.studentYear %>年生
					<%= Constants::SUBJECTS[chatroom.subject.to_sym] %>
				</div>
				<%= link_to "チャットへ行く", chatroom_path(id: chatroom.id), class: "chatroom-link"%>
			</div>
		</div>
	<% end %>
<end>